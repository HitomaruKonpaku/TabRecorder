{
    "manifest_version": 2,
    "name": "TabRecorder",
    "version": "1.0",
    "description": "Track & record all to local storage",
    "homepage_url": "https://github.com/HitomaruKonpaku/TabRecorder",
    "icons": {},
    "background": {
        "scripts": [
            "js/bg/background.js",
            "js/bg/event.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/tabrecorder.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "background",
        "storage",
        "unlimitedStorage"
    ]
}